<div class="btn-toolbar" role="toolbar" aria-label="Editor toolbar">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-secondary" {{action "toggleEditMode"}}>
      {{if editMode Voorbeeld Bewerk}}
    </button>
  </div>

  {{#if editMode}}
    {{#each styleOptions.groups as |group|}}
      {{#if group.dropdown}}

        {{#bs-dropdown as |dd|}}
          {{#dd.button type="secondary"}}{{fa-icon group.faIconName}}{{/dd.button}}

          {{#dd.menu as |menu|}}
            {{#each group.options as |opt|}}
              {{#menu.item}}
                <button type="button" class="dropdown-item" {{action applyStyleOptionAction opt}}>
                  {{fa-icon opt.faIconName size=opt.size prefix=opt.faIconPrefix fixedWidth=true}}
                  {{opt.name}}
                </button>
              {{/menu.item}}
            {{/each}}
          {{/dd.menu}}
        {{/bs-dropdown}}

      {{else}}

        <div class="btn-group" role="group" aria-label="{{group.name}}">
          {{#each group.options as |opt|}}
            {{#if opt.modal}}
              <button type="button" class="btn btn-secondary" title="{{opt.name}}" data-toggle="modal" data-target="#insertModal" {{action openModalAction opt}}>
                {{fa-icon opt.faIconName prefix=opt.faIconPrefix}}
              </button>
            {{else}}
              <button type="button" class="btn btn-secondary" title="{{opt.name}}" {{action applyStyleOptionAction opt}}>
                {{fa-icon opt.faIconName prefix=opt.faIconPrefix}}
              </button>
            {{/if}}
          {{/each}}
        </div>
      {{/if}}
    {{/each}}
  {{/if}}

  <div class="btn-group">
    <a href="http://commonmark.org/help/" target="_blank">
      <button type="button" class="btn btn-secondary" title="Help">{{fa-icon "question-circle"}}</button>
    </a>
  </div>
</div>
