<span class="font-weight-bold mb-3">{{t 'Open vraag'}}</span>

{{#unless question.form.hasResponses }}
  <div class="float-md-right mb-3">
    {{fa-icon 'times' click=(action "deleteQuestion")}}
  </div>
{{/unless}}

<div class="form-group">
  {{input type="text" class="form-control" name="question" placeholder="Vraag" value=question.question disabled=question.form.hasResponses}}
</div>

<div class="form-group row">
  <div class="col-md-5 col-sm-12">
    <div class="form-inline">
      <div class="form-group">
        <label class="sr-only">{{t 'Vraagtype'}}</label>
        {{input/select-input
          class='form-control'
          required=required
          options=questionTypeOptions
          placeholder=(t 'Vraagtype')
          value=question.fieldType
          disabled=question.form.hasResponses
        }}
      </div>
      <div class="form-group ml-2">
        <label class="form-check-label pl-3">
          {{input class="form-check-input" type="checkbox" name="required" checked=question.required disabled=question.form.hasResponses }} {{t "Verplicht"}}
          <div class="custom-checkmark"></div>
        </label>
      </div>
    </div>
  </div>
  {{#unless question.form.hasResponses }}
    <div class="col-md-7 col-sm-12">
      <div class="float-md-right">
        <button type="button" class="btn btn-default" {{action "moveQuestionUp"}}>
          {{fa-icon 'arrow-up'}} {{t "Omhoog"}}
        </button>

        <button type="button" class="btn btn-default" {{action "moveQuestionDown"}}>
          {{fa-icon 'arrow-down'}} {{t "Omlaag"}}
        </button>
      </div>
    </div>
  {{/unless}}
</div>
