<div class="form-group">
  {{input type="text" class="form-control" name="question" placeholder="Vraag" value=question.question disabled=question.form.hasResponses}}
</div>

<div class="form-group row">
  <div class="col-md-5 col-sm-12">
    <div class="form-inline">
      <div class="form-group">
        <label class="sr-only">Vraagtype</label>
        {{input/select-input
          class='form-control'
          required=required
          options=questionTypeOptions
          placeholder=Vraagtype
          value=question.fieldType
          disabled=question.form.hasResponses
        }}
      </div>
    </div>
  </div>
</div>

{{#each question.sortedOptions as |option|}}
  {{#unless option.isDeleted}}
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon d-flex justify-content-center align-items-center">
          <label class="form-check-label">
            <input type={{question.fieldType}} disabled="disabled">
            {{#if (eq fieldType "checkbox")}}
              <div class="custom-checkmark input-checkmark"></div>
            {{else}}
              <div class="custom-radiobutton input-checkmark"></div>
            {{/if}}
          </label>
        </span>

        {{input type="text" class="form-control" name="option" placeholder="Optie" value=option.option disabled=question.form.hasResponses}}

        {{#unless question.form.hasResponses }}
          <div class="input-group-append">
            <button type="button" class="btn btn-default" {{action "moveOptionUp" option}}>
              {{fa-icon 'arrow-up'}}
            </button>
            <button type="button" class="btn btn-default" {{action "moveOptionDown" option}}>
              {{fa-icon 'arrow-down'}}
            </button>
            <button type="button" class="btn btn-default" {{action "deleteOption" option}}>
              {{fa-icon 'trash'}}
            </button>
          </div>
        {{/unless}}
      </div>
    </div>
  {{/unless}}
{{/each}}

{{#unless question.form.hasResponses }}
  <button type="button" class="btn btn-secondary" {{action "addOption"}}>Optie toevoegen</button>
{{/unless}}
