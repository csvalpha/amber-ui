<ModelForm::DatetimeInput @model={{model}} @property="respondFrom" @label="Invullen vanaf" />
<ModelForm::DatetimeInput @model={{model}} @property="respondUntil" @label="Invullen tot" />


<div class="form-group row">
  <label class="col-sm-2 col-form-label form-control-label" for={{inputIdentifier}}>Vraag *</label>
  <div class="col-sm-10">
    {{#if @model.hasResponses}}
      <div class="alert alert-danger">
        Je kunt de poll niet meer aanpassen, omdat er al reacties zijn.
      </div>
    {{/if}}

    {{#each @model.sortedQuestions as |question|}}
      {{#unless question.isDeleted}}
        {{poll/closed-question question}}
      {{/unless}}
    {{/each}}
  </div>
</div>
