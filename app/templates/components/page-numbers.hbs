<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class={{if canStepBackward "page-item" "page-item disabled"}}>
      <a class="page-link previous" href="#" aria-label="Vorige" {{action "incrementPage" -1}}>
        <FaIcon @icon='chevron-left'/>
        <span class="sr-only">Vorige</span>
      </a>
    </li>
    {{#each pageItems as |item|}}
      {{#if item.dots}}
        <li class="page-item disabled"><a class="page-link">...</a></li>
      {{/if}}
      {{#if item.current}}
        <li class="page-item active">
          <a class="page-link">{{item.page}} <span class="sr-only">(current)</span></a>
        </li>
      {{else}}
        <li class="page-item">
          <a class="page-link" href="#" {{action "pageClicked" item.page}}>{{item.page}}</a>
        </li>
      {{/if}}
    {{/each}}
    <li class={{if canStepForward "page-item" "page-item disabled"}}>
      <a class="page-link next" href="#" aria-label="Volgende" {{action "incrementPage" 1}}>
        <FaIcon @icon='chevron-right'/>
        <span class="sr-only">Volgende</span>
      </a>
    </li>
  </ul>
</nav>
