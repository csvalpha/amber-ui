<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item">
      <LinkTo @query={{hash page=previousPage}} @disabled={{not canStepBackward}}>
        <span class="page-link previous" href="#" aria-label="Vorige">
          <FaIcon @icon='chevron-left'/>
          <span class="sr-only">Vorige</span>
        </span>
      </LinkTo>
    </li>

    {{#each pageItems as |item|}}
      {{#if item.dots}}
        <li class="page-item disabled"><a class="page-link">...</a></li>
      {{/if}}
      {{#if item.current}}
        <li class="page-item active">
          <a class="page-link">{{item.page}} <span class="sr-only">(current)</span></a>
        </li>
      {{else}}
        <LinkTo @query={{hash page=item.page}}>
          <li class="page-item">
            <span class="page-link" href="#">{{item.page}}</span>
          </li>
        </LinkTo>
      {{/if}}
    {{/each}}

    <li class="page-item">
      <LinkTo @query={{hash page=nextPage}} @disabled={{not canStepForward}}>
        <span class="page-link next" href="#" aria-label="Volgende">
          <FaIcon @icon='chevron-right'/>
          <span class="sr-only">Volgende</span>
        </span>
      </LinkTo>
    </li>
  </ul>
</nav>
