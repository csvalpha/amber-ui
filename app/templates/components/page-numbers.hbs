<nav aria-label="Page navigation">
  <ul class="pagination">
    {{#if canStepBackward}}
      <li class="page-item">
        <LinkTo @route="activities.index" @query={{hash page=previousPage}} @disabled={{true}}>
          <span class="page-link previous" href="#" aria-label="Vorige">
            <FaIcon @icon='chevron-left'/>
            <span class="sr-only">Vorige</span>
          </span>
        </LinkTo>
      </li>
    {{/if}}

    {{#each pageItems as |item|}}
      {{#if item.dots}}
        <li class="page-item disabled"><a class="page-link">...</a></li>
      {{/if}}
      {{#if item.current}}
        <li class="page-item active">
          <a class="page-link">{{item.page}} <span class="sr-only">(current)</span></a>
        </li>
      {{else}}
        <LinkTo @route="activities.index" @query={{hash page=item.page}}>
          <li class="page-item">
            <span class="page-link" href="#">{{item.page}}</span>
          </li>
        </LinkTo>
      {{/if}}
    {{/each}}

    {{#if canStepForward}}
      <li class="page-item">
        <a class="page-link next" href="#" aria-label="Volgende" {{action "incrementPage" 1}}>
          <FaIcon @icon='chevron-right'/>
          <span class="sr-only">Volgende</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>
