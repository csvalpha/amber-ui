{{#if hasPermission}}
  {{#if (and link linkArgument)}}
    <LinkTo @route={{link}} @model={{linkArgument}} @invokeAction={{action "closeAfterNavigation"}}>
      <MenuSidebarLink @minor={{minor}} @title={{title}} @icon={{icon}} />
    </LinkTo>
  {{else if link}}
    <LinkTo @route={{link}} @invokeAction={{action "closeAfterNavigation"}}>
      <MenuSidebarLink @minor={{minor}} @title={{title}} @icon={{icon}} />
    </LinkTo>
  {{else}}
    <MenuSidebarLink @minor={{minor}} @title={{title}} @icon={{icon}} />
  {{/if}}
{{/if}}
