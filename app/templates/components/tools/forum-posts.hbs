<div class="card tool">
  <div class="card-header">
    <LinkTo @route="forum.index">
      <h5 class="card-text">Forum</h5>
    </LinkTo>
  </div>

  <ul class="list-group list-group-flush">
    {{#each threads as |thread|}}
      <LinkTo @route="forum.categories.category.threads.thread.show" @models={{array thread.category.id thread.id}}>
        <li class="list-group-item">
          <span>
            {{#if (thread-has-new-posts thread)}}
              <div class="new-forum-posts status-dot"></div>
            {{/if}}
            {{#unless thread.isOpen}}
              {{fa-icon 'lock'}}
            {{/unless}}
            {{thread.title}}
          </span>
        </li>
      </LinkTo>
    {{else}}
      <li class="list-group-item">
        Er zijn helaas geen forum topics!
      </li>
    {{/each}}
  </ul>
</div>
