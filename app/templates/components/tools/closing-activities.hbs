<div class="card tool">
  <div class="card-header">
    <div class="d-flex justify-content-between">
      {{#link-to 'activities.index'}}
        <h5 class="card-text">Sluitende inschrijflijsten</h5>
      {{/link-to}}
      <div class="col-xs-1 tool-actions">
        <a href="#">
          {{fa-icon 'question-circle' class="link-highlight"}}

          {{#bs-popover triggerEvents="focus" placement="bottom"}}
            <div class="d-block"><div class="status-dot badge-info"></div> Inschrijving open</div>
            <div class="d-block"><div class="status-dot badge-success"></div> Ingeschreven / vrij toegankelijk</div>
            <div class="d-block"><div class="status-dot badge-danger"></div> Niet ingeschreven</div>
            <div class="d-block"><div class="status-dot badge-default"></div> Inschrijving nog niet open</div>
          {{/bs-popover}}
        </a>
      </div>
    </div>
  </div>

  <ul class="list-group list-group-flush">
    {{#each activities as |activity|}}
      {{#link-to 'activities.show' activity}}
        <li class="list-group-item">
          <span class="activity-tool-title "> {{activity.title}} </span> <br>
          <span class="activity-tool-start-time text-muted"> {{form/status-dot activity.form}} {{form-opened-label activity.form}}</span>
        </li>
      {{/link-to}}
    {{else}}
      <li class="list-group-item">
        Er zijn de komende 7 dagen geen inschrijflijsten die sluiten
      </li>
    {{/each}}
  </ul>
</div>
