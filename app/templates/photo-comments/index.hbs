<EmberWormhole @to='navbar-wormhole'>
  <PageActionsButtons @pageActions={{pageActions}}>
    <FilterBar
      @class='col-12 col-md'
      @filter={{search}}
      @sortedAttribute={{sortedAttribute}}
      @sortableAttributes={{sortableAttributes}}
      @sortedAscending={{sortedAscending}}
      @enter={{action 'selectFirstItem'}}
    />
  </PageActionsButtons>
</EmberWormhole>

<div class='row'>
  <div class='col-12'>
    {{#each model as |photo|}}
      <div class='card mb-2 mb-md-5'>
        <div class='col'>
          <div class='card-body p-0'>
            <div class='row row-cols-1 row-cols-md-2'>
              <LinkTo
                @route='photo-albums.photo-album.photos.show'
                @models={{array photo.photoAlbum photo.id}}
              >
                <div class='col' style='padding: 0;'>
                  <PhotoAlbums::Photo @model={{photo}} @showInfo={{false}} />
                </div>
              </LinkTo>
              <div class='col' style='padding: 0;'>
                <PhotoComments::Comments
                  @model={{photo}}
                  class='photo-comments mb-0 shadow-none'
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<div class='row justify-content-center'>
  <PageNumbers @info={{model.meta}} />
</div>