<EmberWormhole @to='navbar-wormhole'>
  <PageActionsButtons @pageActions={{this.pageActions}}>
    <FilterBar
      @class='col-12 col-md'
      @filter={{this.search}}
      @sortedAttribute={{this.sortedAttribute}}
      @sortableAttributes={{this.sortableAttributes}}
      @sortedAscending={{this.sortedAscending}}
    />
  </PageActionsButtons>
</EmberWormhole>

<div class='row'>
  {{#each @model as |album|}}
    <div class='col-md-6'>
      <LinkTo @route='photo-albums.photo-album' @model={{album}}>
        <Cards::PhotoAlbumCard @album={{album}} />
      </LinkTo>
    </div>
  {{else}}
    <div class='col-md-12'>
      <div class='alert alert-warning'>
        Geen foto-albums gevonden
      </div>
    </div>
  {{/each}}
</div>

<div class='row justify-content-center'>
  <PageNumbers @info={{@model.meta}} />
</div>