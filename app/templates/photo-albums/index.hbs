<EmberWormhole @to="navbar-wormhole">
  <PageActionsButtons @pageActions={{pageActions}}>
    <FilterBar @class="col-12 col-md" @filter={{search}} @sortedAttribute={{sortedAttribute}} @sortableAttributes={{sortableAttributes}} @sortedAscending={{sortedAscending}} />
  </PageActionsButtons>
</EmberWormhole>

<div class="row">
  {{#each pagedModel as |album|}}
    <div class="col-md-6">
      <LinkTo @route="photo-albums.photo-album" @model={{album}}>
        {{cards/photo-album-card album}}
      </LinkTo>
    </div>
  {{else}}
    <div class="col-md-12">
      <div class="alert alert-warning">
        Geen foto-albums gevonden
      </div>
    </div>
  {{/each}}
</div>

<div class="row justify-content-center">
  <PageNumbers @content={{paginator}} />
</div>
