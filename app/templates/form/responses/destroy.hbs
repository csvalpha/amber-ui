<p>Weet je zeker dat je dit formulierantwoord wilt verwijderen?</p>
<div class='table-responsive card'>
  <table class='table'>
    <thead>
      <tr>
        <th>Naam</th>
        {{#each @model.form.sortedQuestions as |question|}}
          <th>{{question.question}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{form/responses-table-row @model.form model}}
    </tbody>
  </table>
</div>

<button {{action 'destroyModel'}} class='btn btn-danger' type='button'>Ja</button>
<button {{action 'cancel'}} class="btn btn-default" type="button">Nee</button>

{{#if errorMessage}}
  <div class='text-danger'>{{this.errorMessage}}</div>
{{/if}}