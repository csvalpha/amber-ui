<p>{{t "Weet je zeker dat je dit formulierantwoord  wilt verwijderen?"}}</p>
<div class="table-responsive card">
  <table class="table">
    <thead>
      <tr>
        <th> {{t 'Naam'}} </th>
        {{#each model.form.sortedQuestions as |question|}}
          <th> {{question.question}} </th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{form/responses-table-row model.form model}}
    </tbody>
  </table>
</div>

<button {{action "destroy"}} class="btn btn-danger">{{t "Ja"}}</button>
{{#link-to "activities.index" class="btn btn-default" tagName="button"}}{{t "Nee"}}{{/link-to}}

{{#if errorMessage}}
  <div class="text-danger">{{errorMessage}}</div>
{{/if}}
