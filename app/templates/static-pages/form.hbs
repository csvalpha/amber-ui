<div class="card">
  <div class="card-header">
    <h5> {{if model.isNew "Infopagina aanmaken" "Infopagina wijzigen"}} </h5>
  </div>
  <div class="card-body">
    <form {{action "submit" on="submit"}}>
      {{#if model.publiclyVisible}}
        <div class="alert alert-info" role="alert">
          {{t 'Een publiek informatie pagina is ook zichtbaar voor niet-leden. Hou hier rekening mee.'}}
        </div>
      {{/if}}
      {{model-form/text-input model=model property='title'                label=(t 'Titel')}}
      {{model-form/select-input   model=model property="category"         label=(t "Categorie")         options=staticPageCategoryOptions required=true}}
      {{model-form/checkbox-input model=model property='publiclyVisible'  label=(t 'Publiek zichtbaar')}}

      <div class="row">
        <label for="article-form-content col-form-label form-control-label" class="col-sm-2">{{t "Inhoud"}}</label>
        <div class="col-sm-10">
          {{md-editor content=model.content}}
        </div>
      </div>

      {{#model-form/form-actions model=model  errorMessage=errorMessage}}
        {{#link-to "static-pages.index" class="btn btn-default"}}{{t "Annuleren"}}{{/link-to}}
      {{/model-form/form-actions}}
    </form>
  </div>
</div>
