<div class="card">
  <div class="card-header">
    <h5> {{if model.isNew "Infopagina aanmaken" "Infopagina wijzigen"}} </h5>
  </div>
  <div class="card-body">
    <form {{action "submit" on="submit"}}>
      <ModelForm::TextInput @model={{model}} @property="title" @label="Titel" />
      <ModelForm::SelectInput @model={{model}} @property="category" @label="Categorie" @options={{staticPageCategoryOptions}} @required={{true}} />
      <ModelForm::CheckboxInput @model={{model}} @property="publiclyVisible" @label="Zichtbaar voor externen" />

      {{#if model.publiclyVisible}}
        <div class="alert alert-warning" role="alert">
          Een publiek informatie pagina is ook zichtbaar voor niet-leden. Houd hier rekening mee.
        </div>
      {{/if}}

      <div class="row">
        <label for="article-form-content col-form-label form-control-label" class="col-sm-2">Inhoud</label>
        <div class="col-sm-10">
          <MdEditor @content={{model.content}} />
        </div>
      </div>

      <ModelForm::FormActions @model={{model}} @errorMessage={{errorMessage}}>
        <LinkTo @route="static-pages.index" class="btn btn-default">Annuleren</LinkTo>
      </ModelForm::FormActions>
    </form>
  </div>
</div>
