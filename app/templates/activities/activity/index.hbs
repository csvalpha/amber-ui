<EmberWormhole @to='navbar-wormhole'>
  <PageActionsButtons @pageActions={{pageActions}} />
</EmberWormhole>
<Cards::ActivityCard @activity={{@model.activity}} @moreInfo={{true}} />

{{#if @model.form}}
  {{#if (can 'create form/responses')}}
    {{#if @model.currentUserResponse.completed}}
      <Form::Response::ResponseCompletedAlert @form={{@model.form}} />
    {{else if this.canSubmitResponse}}
      <Form::Response::ResponseCard
        @form={{@model.form}}
        @response={{@model.currentUserResponse}}
        @data-test-form-response-card={{@model.form.id}}
      />
    {{else}}
      <Form::Response::FormClosedAlert @form={{@model.form}} />
    {{/if}}
  {{/if}}

  {{#if (can 'show form/responses')}}
    <Form::ResponsesTableCard @form={{@model.form}} />
  {{/if}}
{{/if}}