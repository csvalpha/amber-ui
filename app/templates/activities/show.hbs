<EmberWormhole @to="navbar-wormhole">
  <PageActionsButtons @pageActions={{pageActions}} />
</EmberWormhole>

{{cards/activity-card model.activity moreInfo=true}}

{{#if model.form}}
  {{#if (can 'create form/responses')}}
    {{#if canSubmitResponse}}
      {{form/response/response-card model.form model.currentUserResponse errorMessage=errorMessage submitResponse=(action 'submitResponse') data-test-form-response-card=model.form.id}}
    {{else if model.currentUserResponse.completed}}
      {{form/response/response-completed-alert model.form}}
    {{else}}
      {{form/response/form-closed-alert model.form}}
    {{/if}}
  {{/if}}

  {{#if (can 'show form/responses')}}
    {{form/responses-table-card model.form}}
  {{/if}}
{{/if}}
