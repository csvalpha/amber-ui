<div class='ember-view'>
  <HeaderNav @routeInfos={{this.routeInfos}} />
  <FlashNotice />
  <div id='ember-wormhole-destination'></div>

  <MenuSidebar />
  <PrivacyModal />

  <div class='app {{if session.isAuthenticated "authenticated "}}'>
    <div
      class='container main
        {{if session.isAuthenticated " authenticated"}}
        {{if layoutManager.leftSideBarExpanded " left-sidebar-expanded"}}
        {{if layoutManager.leftSideBarOpen " left-sidebar-open"}}'
    >
      <div class='row justify-content-center'>
        <div class='col-12 {{if session.isAuthenticated "col-md-8 col-lg-9 col-xl-10" "px-4"}}'>
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
  <FooterNav
    @class={{concat
      'footer-holder'
      (concat
        (if layoutManager.leftSideBarExpanded ' left-sidebar-expanded ')
        (if layoutManager.leftSideBarOpen ' left-sidebar-open')
        (if session.isAuthenticated ' authenticated')
      )
    }}
  />
</div>