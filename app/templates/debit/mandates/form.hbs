<div class="card">
  <div class="card-header">
    <h5> {{if @model.isNew "Mandaat aanmaken" "Mandaat wijzigen"}} </h5>
  </div>
  <div class="card-body">
    <form {{action "submit" on="submit"}}>
      <ModelForm::DateInput @model={{model}} @property="startDate" @label="Start datum" />
      <ModelForm::DateInput @model={{model}} @property="endDate" @label="Eind datum" />
      <ModelForm::TextInput @model={{model}} @property="iban" @label="IBAN" />
      <ModelForm::TextInput @model={{model}} @property="ibanHolder" @label="Bankrekeninghouder" />

      <div class="form-group row">
        <label class="col-md-2 form-control-label">Gebruiker</label>

        <div class="col-sm-10">
          <PowerSelect @options={{users}} @onChange={{action (mut @model.user)}} @selected={{@model.user}} @searchEnabled={{true}} @searchField="fullName" as |user|>
            {{user.fullName}}
          </PowerSelect>

          {{form-control-feedback (get @model.errors property)}}
        </div>
      </div>

      <ModelForm::FormActions @model={{model}} @errorMessage={{this.errorMessage}}>
        <LinkTo @route="debit.mandates.index" class="btn btn-default">Annuleren</LinkTo>
      </ModelForm::FormActions>
    </form>
  </div>
</div>
