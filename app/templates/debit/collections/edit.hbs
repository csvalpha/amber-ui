<div class="card">
  <div class="card-header">
    <h5> Incasso bewerken </h5>
  </div>
  <div class="card-body">
    <form {{action "submit" on="submit"}}>
      {{model-form/text-input   model=model property="name" label='Titel'             required=true}}
      {{model-form/date-input   model=model property="date" label='Datum van incasso' required=true}}

      {{#model-form/form-actions model=model  errorMessage=errorMessage}}
        {{#link-to "debit.collections" class="btn btn-default"}}Annuleren{{/link-to}}
      {{/model-form/form-actions}}
    </form>
  </div>

  <div class="card-body">
    <div class="form-group row">
      <span class="col-md-2 form-control-label">Toevoegen</span>

      <div class="col-sm-10">
        {{#power-select
          selected=selected
          options=users
          onchange=(action "addUser")
          selected=transaction.user
          searchField="fullName" as |user|}}
          {{user.fullName}}
        {{/power-select}}
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>
                Gebruiker
              </th>
              <th>
                Beschrijving
              </th>
              <th>
                Bedrag
              </th>
              <th>
                {{fa-icon 'trash'}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each model.transactions as |transaction|}}
              {{#unless transaction.isDeleted}}
                <tr>
                  <td>
                    {{transaction.user.fullName}}
                  </td>
                  <td>
                    {{input value=transaction.description required=true}}
                  </td>
                  <td>
                    &euro; {{input value=transaction.amount type='number' step=0.01 required=true}}
                  </td>
                  <td>
                    <button type="button" class="btn btn-danger" {{action "removeTransaction" transaction}}>
                      {{fa-icon 'trash'}}
                    </button>
                  </td>
                </tr>
              {{/unless}}
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
