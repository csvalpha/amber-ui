<div class='card'>
  <div class='card-header'>
    <h5>{{if @model.isNew 'Incasso aanmaken' 'Incasso wijzigen'}}</h5>
  </div>
  <div class='card-body'>
    <form {{on 'submit' (prevent-default this.submit)}}>
      <ModelForm::TextInput
        @model={{model}}
        @property='name'
        @label='Titel'
        @required={{true}}
      />
      <ModelForm::DateInput
        @model={{model}}
        @property='date'
        @label='Datum van incasso'
        @required={{true}}
      />

      <ModelForm::FormActions
        @model={{model}}
        @errorMessage={{this.errorMessage}}
      >
        <button {{on "click" this.cancel}} type="button" class='btn btn-default'>
          Annuleren
        </button>
      </ModelForm::FormActions>
    </form>
  </div>

  <div class='card-body'>
    <div class='mb-3 row'>
      <span class='col-md-2 form-label'>Toevoegen</span>

      <div class='col-sm-10'>
        <PowerSelect
          @options={{users}}
          @onChange={{this.addUser}}
          @selected={{transaction.user}}
          @searchEnabled={{true}}
          @searchField='fullName'
          @allowClear={{true}}
          as |user|
        >
          {{user.fullName}}
        </PowerSelect>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-12 table-responsive'>
        <table class='table table-hover'>
          <thead>
            <tr>
              <th>Gebruiker</th>
              <th>Beschrijving</th>
              <th>Bedrag</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each @model.transactions as |transaction|}}
              {{#unless transaction.isDeleted}}
                <tr>
                  <td>
                    {{transaction.user.fullName}}
                  </td>
                  <td>
                    <Input
                      @value={{transaction.description}}
                      required={{true}}
                      aria-label='Beschrijving'
                      class="form-control"
                    />
                  </td>
                  <td>
                    <div class="input-group">
                      <span class="input-group-text">&euro;</span>
                      <Input
                        @value={{transaction.amount}}
                        @type='number'
                        step={{0.01}}
                        required={{true}}
                        aria-label='Bedrag'
                        class="form-control"
                      />
                    </div>
                  </td>
                  <td>
                    <button
                      type='button'
                      class='btn btn-danger'
                      {{action 'removeTransaction' transaction}}
                    >
                      <FaIcon @icon='trash' />
                    </button>
                  </td>
                </tr>
              {{/unless}}
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>