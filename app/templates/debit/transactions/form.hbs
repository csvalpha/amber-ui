<div class="card">
  <div class="card-header">
    <h5> Transactie aanmaken </h5>
  </div>
  <div class="card-body">
    <form {{action "submit" on="submit"}}>
      <ModelForm::TextInput @model={{model}} @property="description" @label="Beschrijving" @required={{true}} />
      <ModelForm::TextInput @model={{model}} @property="amount" @label="Bedrag" @required={{true}} @type="number" @step="0.01" />

      <div class="form-group row">
        <span class="col-md-2 form-control-label">Gebruiker</span>

        <div class="col-md-10">
          <PowerSelect @selected={{model.user}} @options={{users}} @onchange={{action "setUser"}} @searchField="fullName" as |user|>
            {{user.fullName}}
          </PowerSelect>
        </div>
      </div>

      <ModelForm::FormActions @model={{model}} @errorMessage={{errorMessage}}>
        <LinkTo @route="debit.collections" class="btn btn-default">Annuleren</LinkTo>
      </ModelForm::FormActions>
    </form>
  </div>
</div>
