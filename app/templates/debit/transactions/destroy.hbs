{{page-actions pageActions}}

<div class="card">
  <div class="card-header">
    <h5> Transactie verwijderen </h5>
  </div>
  <div class="card-block p-3">
    <p class="card-text">
      Weet je zeker dat je deze transactie ({{model.user.fullName}}-{{model.description}}) wilt verwijderen?
    </p>
    {{#if errorMessage}}
      <div class="text-danger">{{errorMessage}}</div>
    {{/if}}
  </div>
  <div class="card-footer">
    <button {{action "destroy"}} class="btn btn-danger">Verwijderen</button>
    {{#link-to "debit.collections.show" model.collection class="btn btn-default" tagName="button"}}Annuleren{{/link-to}}
  </div>
</div>
