{{page-actions pageActions}}

<div class='card'>
  <div class='card-header'>
    <h5>Transactie verwijderen</h5>
  </div>
  <div class='card-block p-3'>
    <p class='card-text'>
      Weet je zeker dat je deze transactie ({{@model.user.fullName}}-{{@model.description}})
      wilt verwijderen?
    </p>
    {{#if errorMessage}}
      <div class='text-danger'>{{this.errorMessage}}</div>
    {{/if}}
  </div>
  <div class='card-footer'>
    <button {{action 'destroy'}} class='btn btn-danger' type='button'>
      Verwijderen
    </button>
    <LinkTo
      @route='debit.collections.show'
      @model={{@model.collection}}
      class='btn btn-default'
    >
      Annuleren
    </LinkTo>
  </div>
</div>