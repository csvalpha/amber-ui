<div class="card">
  <div class="card-header">
    <h2>{{t "Details"}}</h2>
  </div>
  <div class="card-body">
    <form {{action "submit" on="submit"}}>
      {{model-form/text-input model=model property='email' label=(t 'E-mail') required=true type="email" placeholder="voorbeeld@csvalpha.nl"}}
      {{model-form/select-input model=model property='moderationType' options=mailAliasModerationTypes label=(t 'Moderatietype')}}

      <div class="form-group row">
        <label class="col-md-2 form-control-label">{{t 'Moderator'}}</label>

        <div class="col-sm-10">
          {{#power-select
            options=groups
            onchange=(action (mut model.moderatorGroup))
            selected=model.moderatorGroup
            disabled=moderationTypeOpen
            placeholder=(t 'Moderator')
            searchField="name" as |group|}}
            {{group.name}}
          {{/power-select}}

          {{form-control-feedback (get model.errors property)}}
        </div>
      </div>

      {{model-form/text-input model=model property='description' label=(t 'Omschrijving')}}

      <div class="form-group row">
        <label class="col-md-2 form-control-label">{{t 'Groep'}}</label>

        <div class="col-sm-10">
          {{#power-select
            options=groups
            onchange=(action (mut model.group))
            selected=model.group
            disabled=anyUser
            placeholder=(t 'Groep')
            searchField="name" as |group|}}
            {{group.name}}
          {{/power-select}}

          {{form-control-feedback (get model.errors property)}}
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-2 form-control-label">{{t 'Groep'}}</label>

        <div class="col-sm-10">
          {{#power-select
            options=users
            onchange=(action (mut model.user))
            selected=model.user
            disabled=anyGroup
            placeholder=(t 'Gebruiker')
            searchField="fullName" as |user|}}
            {{user.fullName}}
          {{/power-select}}

          {{form-control-feedback (get model.errors property)}}
        </div>
      </div>

      {{model-form/checkbox-input model=model property="smtpEnabled" label=(t "SMTP inschakelen")}}

      {{#model-form/form-actions errors=model.errors errorMessage=errorMessage}}
        {{#link-to "mail-aliases.index" class="btn btn-default"}}{{t "Annuleren"}}{{/link-to}}
      {{/model-form/form-actions}}
    </form>
  </div>
</div>
