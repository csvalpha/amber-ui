{{#ember-wormhole to="navbar-wormhole"}}
  {{page-actions-buttons pageActions=pageActions}}
{{/ember-wormhole}}

{{#tabbed-view tabItems=tabItems}}
  <h5>{{t "Incasso mandaten"}}</h5>

  <table class="table">
    <thead>
      <tr>
        <td>{{t 'Mandaat nummer'}}</td>
        <td>{{t 'IBAN nummer'}}</td>
        <td>{{t 'Start datum'}}</td>
        <td>{{t 'Eind datum'}}</td>
      </tr>
    </thead>
    <tbody>
      {{#each model.mandates as |mandate|}}
        <tr>
          <td>
            {{#link-to 'debit.mandates.show' mandate}}
              {{t mandate.id}}
            {{/link-to}}
          </td>
          <td>{{mandate.iban}}</td>
          <td>{{moment-format mandate.startDate 'DD-M-YYYY'}}</td>
          <td>{{moment-format mandate.endDate 'DD-M-YYYY'}}</td>
        </tr>
      {{else}}
        <tr>
          <td colspan="4">
            <p class="text-center text-muted">
              {{t 'Geen mandaten gevonden'}}
            </p>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/tabbed-view}}
