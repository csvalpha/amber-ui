<form {{action "submit" on="submit"}}>
  <div class="card">
    <div class="card-header">
      <h5> {{t "Details"}} </h5>
    </div>
    <div class="card-body">
      {{model-form/file-input    model=model property="avatar" label=(t "Groepsafbeeling")     fileLoaded=(action "fileLoaded")}}
      {{model-form/text-input     model=model property="name"               label=(t "Naam")          required=true disabled=(not (can "edit protected fields of groups"))}}
      {{model-form/textarea-input model=model property="description"        label=(t "Omschrijving")}}
      {{model-form/select-input   model=model property="kind"               label=(t "Soort")         options=groupKindOptions required=true disabled=(not (can "edit protected fields of groups"))}}
      {{model-form/text-input     model=model property="recognizedAtGma"    label=(t "Erkend sinds") disabled=(not (can "edit protected fields of groups"))}}
      {{model-form/text-input     model=model property="rejectedAtGma"      label=(t "Erkend tot") disabled=(not (can "edit protected fields of groups"))}}
      {{model-form/checkbox-input model=model property="administrative"     label=(t "Administratieve groep") disabled=(not (can "edit protected fields of groups"))}}
    </div>
    <div class="card-footer">
      {{#model-form/form-actions errors=model.errors errorMessage=errorMessage}}
        {{#link-to "groups.index" class="btn btn-default"}}{{t "Annuleren"}}{{/link-to}}
      {{/model-form/form-actions}}
    </div>
  </div>

  {{#if (or (can "create memberships") (can "update memberships"))}}
    <div class="card">
      <div class="card-header">
        <h5 >{{t "Leden"}}</h5>
      </div>
      <div class="card-body">
        {{#if (can "create memberships")}}
          <div class="form-group row">
            <span class="col-md-2 form-control-label">{{t "Toevoegen"}}</span>

            <div class="col-sm-10">
              {{#power-select
                selected=selected
                options=users
                onchange=(action "addUser")
                searchField="fullName" as |user|}}
                {{user.fullName}}
              {{/power-select}}
            </div>
          </div>
        {{/if}}

        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-hover" >
              <thead>
                <tr>
                  <th>
                    {{t "Naam"}}
                  </th>
                  <th>
                    {{t "Startdatum"}}
                  </th>
                  <th>
                    {{t "Einddatum"}}
                  </th>
                  <th>
                    {{t "Functie"}}
                  </th>
                  <th class="narrow">
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each model.memberships as |membership|}}
                  {{#unless membership.isDeleted}}
                    <tr>
                      <td>
                        {{membership.user.fullName}}
                      </td>
                      <td>
                        {{input/date-input dateValue=membership.startDate inputClass="form-control" disabled=(not (or (can 'update memberships') membership.isNew))}}
                      </td>
                      <td>
                        {{input/date-input dateValue=membership.endDate inputClass="form-control" disabled=(not (or (can 'update memberships') membership.isNew))}}
                      </td>
                      <td>
                        {{input value=membership.function class="form-control" disabled=(not (or (can 'update memberships') membership.isNew))}}
                      </td>
                      {{#if (can 'destroy membership' membership)}}
                        <td>
                          <button type="button" class="btn btn-danger" {{action "removeMembership" membership}} >
                            <i class="fa fa-trash"></i>
                          </button>
                        </td>
                      {{/if}}
                    </tr>
                  {{/unless}}
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
  <div class="card">
    <div class="card-header">
      <h5> {{t "Permissies"}} </h5>
    </div>
    {{#if (can 'create groups-permissions')}}
      {{permissions/permissions-table modelPermissions=model.permissions editable=true}}
    {{/if}}
  </div>
</form>
