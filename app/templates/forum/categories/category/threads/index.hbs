{{#ember-wormhole to="navbar-wormhole"}}
  {{#page-actions-buttons pageActions=pageActions}}
    {{filter-bar class="col-12 col-md mt-auto" filter=search sortedAttribute=sortedAttribute sortableAttributes=sortableAttributes
               sortedAscending=sortedAscending  enter=(action "selectFirstItem")}}
  {{/page-actions-buttons}}
{{/ember-wormhole}}


<div class="card">
  <div class="row rtable-row header d-none d-md-flex">
    <span class="col rtable-header-item"> Topic </span>
    <span class="col-3 rtable-header-item"> Auteur </span>
    <span class="col-1 rtable-header-item rtable-ta-right"> # </span>
  </div>

  {{#each model.threads as |thread|}}
    {{#link-to 'forum.categories.category.threads.thread.show' thread }}
      <div class="row rtable-row">
        <span class="col-12 col-md rtable-item">  {{forum/status-icon thread}} {{thread.title}} </span>
        <span class="col-6 col-md-3 text-muted rtable-item"> {{#link-to 'users.show' thread.author.id}}{{ thread.author.fullName }}{{/link-to}} </span>
        <span class="col-6 col-md-1 text-muted rtable-item rtable-ta-right"> {{ thread.amountOfPosts }} <span class="d-inline d-md-none"> reacties </span> </span>
      </div>
    {{/link-to}}
  {{/each}}
</div>
