<div class="card">
  <div class="card-header">
    <h5>{{t "Forumpost bewerken"}}</h5>
  </div>
  <div class="card-body">
    <form {{action "submit" on="submit"}}>

      <div class="row">
        <label class="col-sm-2" for="forum-post-form-message col-form-label form-control-label">{{t "Bericht"}}</label>
        <div class="col-sm-10">
          {{md-editor content=model.message}}
        </div>
      </div>

      {{#model-form/form-actions errors=model.errors errorMessage=errorMessage}}
        {{#link-to "forum.categories.category.threads.thread.show" model.thread class="btn btn-default"}}{{t "Annuleren"}}{{/link-to}}
      {{/model-form/form-actions}}
    </form>
  </div>
</div>
