<div
  class='alert alert-success'
  role='alert'
  data-test-response-completed-alert
>
  <div class='container'>
    <div class='row'>
      <strong class='col alert-text'>Je bent ingeschreven!</strong>
      <span class='alert-text'>
        Deze inschrijflijst
        {{lowercase (form-opened-label form)}}
      </span>
      {{#if form.canRespond}}
        <LinkTo
          @route='form.responses.response.destroy'
          @model={{form.currentUserResponseId}}
          class='btn btn-secondary'
        >
          Uitschrijven
        </LinkTo>
      {{/if}}
    </div>
  </div>
</div>