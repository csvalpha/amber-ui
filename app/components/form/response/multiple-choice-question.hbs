<ModelForm::CheckboxGroup
  @model={{this}}
  @property='selectedOptionIds'
  @options={{this.options}}
  @inputLayout='vertical'
  @label={{@question.question}}
  @inputIdentifier={{this.inputIdentifier}}
  @required={{@question.required}}
  @requiredAndNothingSelected={{this.requiredAndNothingSelected}}
  {{on 'click' (fn @updateAnswers @question this.selectedOptionIds)}}
/>