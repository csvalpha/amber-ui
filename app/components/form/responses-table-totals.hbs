{{#if showCheckbox}}
  <th></th>
{{/if}}

<th class="align-top"><strong>{{form.amountOfResponses}}</strong></th>

{{#each form.sortedQuestions as |question|}}
  <th class="align-top">
    {{#if question.isOpenQuestion}}
      <strong>{{question.sumOfAnswers}}</strong>
    {{else}}
      {{#each question.sortedOptions as |opt|}}
        <strong>{{opt.sumOfAnswers}}</strong>
        {{opt.option}}<br />
      {{/each}}
    {{/if}}
  </th>
{{/each}}

{{#if showAllergyInfo}}
  <th></th>
  <th class="align-top"><strong>{{amountOfVegetarians}}</strong></th>
{{/if}}