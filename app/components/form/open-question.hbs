<span class='font-weight-bold mb-3'>Open vraag</span>

{{#unless question.form.hasResponses}}
  <div class='float-md-right mb-3'>
    <FaIcon @icon='xmark' {{on 'click' (action 'deleteQuestion')}} />
  </div>
{{/unless}}

<div class='form-group'>
  <Input
    @type='text'
    class='form-control'
    aria-label='Vraag'
    name='question'
    placeholder='Vraag'
    @value={{question.question}}
    disabled={{question.form.hasResponses}}
  />
</div>

<div class='form-group row'>
  <div class='col-md-5 col-sm-12'>
    <div class='form-inline'>
      <div class='form-group'>
        <label class='sr-only'>Vraagtype</label>
        <Input::SelectInput
          @class='form-control'
          @required={{required}}
          @options={{questionTypeOptions}}
          @placeholder={{Vraagtype}}
          @value={{question.fieldType}}
          @disabled={{question.form.hasResponses}}
        />
      </div>

      <div class='form-group ml-2'>
        <label class='form-check-label pl-3'>
          <Input
            class='form-check-input'
            @type='checkbox'
            name='required'
            @checked={{question.required}}
            disabled={{question.form.hasResponses}}
          />
          Verplicht
          <div class='custom-checkmark'></div>
        </label>
      </div>
    </div>
  </div>

  {{#unless question.form.hasResponses}}
    <div class='col-md-7 col-sm-12'>
      <div class='float-md-right'>
        <button
          type='button'
          class='btn btn-default'
          {{action 'moveQuestionUp'}}
        >
          <FaIcon @icon='arrow-up' />
          Omhoog
        </button>

        <button
          type='button'
          class='btn btn-default'
          {{action 'moveQuestionDown'}}
        >
          <FaIcon @icon='arrow-down' />
          Omlaag
        </button>
      </div>
    </div>
  {{/unless}}
</div>