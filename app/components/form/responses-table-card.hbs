{{#if form.amountOfResponses}}
  <div class='card'>
    <div class='card-header my-2'>
      <div class='row align-items-center'>
        <h5 class='card-title col'>Inschrijvingen</h5>
        <div class='col col-md-auto'>
          <div class="form-check">
            <Input
                @type='checkbox'
                id='show-allergy-info'
                @checked={{showAllergyInfo}}
                class='form-check-input'
            />
            <label class='form-check-label' for='show-allergy-info'>
              Toon dieetwensen
            </label>
          </div>
        </div>
      </div>
    </div>
    <div class='table-responsive responses-table'>
      {{form/responses-table
        form
        form.responses
        showAllergyInfo=showAllergyInfo
      }}
    </div>
  </div>
{{else}}
  <div class='alert alert-warning' role='alert'>
    Er heeft zich nog niemand ingeschreven
  </div>
{{/if}}