{{#if @form.amountOfResponses}}
  <div class='card'>
    <div class='card-header my-2 py-1'>
      <div class='row align-items-center'>
        <h5 class='card-title col'>Inschrijvingen</h5>
        <div class='col col-md-auto d-flex align-items-center flex-wrap'>
          <button class='btn btn-primary btn-sm me-3 my-2 text-nowrap' type="button" {{on 'click' (action 'copyUsernames')}}>
            Kopieer gebruikersnamen
          </button>
          <div class="form-check">
            <Input
                @type='checkbox'
                id='show-allergy-info'
                @checked={{this.showAllergyInfo}}
                class='form-check-input'
            />
            <label class='form-check-label' for='show-allergy-info'>
              Toon dieetwensen
            </label>
          </div>
        </div>
      </div>
    </div>
    <div class='table-responsive responses-table'>
      <Form::ResponsesTable @form={{@form}} @responses={{@form.sortedResponses}} @showAllergyInfo={{this.showAllergyInfo}} />
    </div>
  </div>
{{else}}
  <div class='alert alert-warning' role='alert'>
    Er heeft zich nog niemand ingeschreven
  </div>
{{/if}}
