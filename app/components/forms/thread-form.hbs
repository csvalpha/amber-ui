<div class='card'>
  <div class='card-header'>
    <h5>{{if @model.isNew 'Topic aanmaken' 'Topic wijzigen'}}</h5>
  </div>
  <div class='card-body'>
    <form {{action @onSubmit on='submit'}}>
      <ModelForm::TextInput
        @model={{@model}}
        @property='title'
        @label='Titel'
        @required={{true}}
      />

      {{#if @model.isNew }}
        <div class='row mb-3'>
          <label for='forumpost-message' class="form-label col-sm-2">Bericht *</label>
          <div class='col-sm-10'>
            <MdEditor
              @content={{@model.firstPost.message}}
              @textareaId='forumpost-message'
              @setContent={{@setContent}}
            />
          </div>
        </div>
      {{else}}
        {{#if (can 'edit forum/threads')}}
          <ModelForm::CheckboxInput
            @model={{@model}}
            @property='isOpen'
            @label='Open voor reacties'
          />
        {{/if}}
      {{/if}}

      <ModelForm::FormActions
        @errors={{@model.errors}}
        @errorMessage={{@errorMessage}}
      >
        <button
          {{action @onCancel}}
          type="button"
          class='btn btn-default'
        >
          Annuleren
        </button>
      </ModelForm::FormActions>
    </form>
  </div>
</div>