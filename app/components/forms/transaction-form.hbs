<div class='card'>
  <div class='card-header'>
    <h5>{{if @model.isNew 'Transactie aanmaken' 'Transactie wijzigen'}}</h5>
  </div>
  <div class='card-body'>
    <form {{on 'submit' (prevent-default @onSubmit)}}>
      <ModelForm::TextInput
        @model={{@model}}
        @property='description'
        @label='Beschrijving'
        @required={{true}}
      />
      <ModelForm::TextInput
        @model={{@model}}
        @property='amount'
        @label='Bedrag'
        @required={{true}}
        @type='number'
        @step='0.01'
      />

      <div class='mb-3 row'>
        <span class='col-md-2 form-label'>Gebruiker</span>

        <div class='col-md-10'>
          <PowerSelect
            @selected={{@model.user}}
            @options={{@users}}
            @onChange={{@onSetUser}}
            @searchField='fullName'
            as |user|
          >
            {{user.fullName}}
          </PowerSelect>
        </div>
      </div>

      <ModelForm::FormActions @model={{@model}} @errorMessage={{@errorMessage}}>
        <button {{on 'click' @onCancel}} type="button" class='btn btn-default'>
          Annuleren
        </button>
      </ModelForm::FormActions>
    </form>
  </div>
</div>