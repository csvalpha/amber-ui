<div class='card'>
  <div class='card-body p-0'>
    <div class='row no-gutters'>
      <div class='col-12 col-md-3'>
        <div class='nav nav-tabs flex-md-column vertical-tabs-md pt-3 pb-md-3'>
          {{#each tabItems as |item|}}
            {{#if item.canAccess}}
              <li class='nav-item'>
                <LinkTo
                  @route={{item.link}}
                  @model={{item.linkArgument}}
                  class='nav-link'
                >
                  {{item.title}}
                </LinkTo>
              </li>
            {{/if}}
          {{/each}}
        </div>
      </div>
      <div class='col-12 col-md-9'>
        <div class='tab-content' id='v-pills-tabContent'>
          <div class='tab-pane fade show active p-3'>
            {{yield}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>