<Input::DateInput
  @inputId={{inputId}}
  @type="datetime"
  @dateValue={{dateValue}}
  @class='col-6'
  @inputClass={{inputClass}}
  @placeholder={{placeholder}}
  @required={{required}}
  @disabled={{disabled}}
/>
<Input::TimeInput
  @inputId={{concat inputId '-time'}}
  @type="datetime"
  @dateValue={{dateValue}}
  @class='col-6'
  @inputClass={{inputClass}}
  @placeholder={{placeholder}}
  @required={{required}}
  @disabled={{disabled}}
/>