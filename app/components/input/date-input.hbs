{{#if showNativeDateInput}}
  <Input
    @type='date'
    id={{inputId}}
    @value={{inputValue}}
    class={{inputClass}}
    placeholder={{placeholder}}
    required={{required}}
    disabled={{disabled}}
  />
{{else}}
  <input
    {{pikaday
      value=@dateValue
      onSelect=(action 'onPikadaySelection')
      format=this.pikadayFormat
      yearRange=@yearRange
      i18n=this.pikadayI18n
    }}
    id={{@inputId}}
    placeholder={{@placeholder}}
    required={{@required}}
    disabled={{@disabled}}
    autocomplete='off'
    class={{@inputClass}}
  />
{{/if}}
