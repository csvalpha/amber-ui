{{#if hasPermission}}
  <div {{on 'mouseover' this.showPopup}} {{on 'mouseout' this.hidePopup}}>
    {{#if (and link linkArgument)}}
      <LinkTo
        @route={{link}}
        @model={{linkArgument}}
        {{on 'click' this.closeAfterNavigation}}
      >
        <MenuSidebarLink @minor={{minor}} @title={{title}} @icon={{icon}} />
      </LinkTo>
    {{else if link}}
      <LinkTo @route={{link}} {{on 'click' this.closeAfterNavigation}}>
        <MenuSidebarLink @minor={{minor}} @title={{title}} @icon={{icon}} />
      </LinkTo>
    {{else}}
      <MenuSidebarLink @minor={{minor}} @title={{title}} @icon={{icon}} />
    {{/if}}
  </div>
{{/if}}