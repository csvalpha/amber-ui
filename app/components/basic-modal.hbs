<div class='basic-modal modal'>
  <div
    class='modal-dialog {{if @modalSizeClass @modalSizeClass}}'
    role='document'
  >
    <div class='modal-content'>
      <div class='modal-header p-3'>
        <h5 class='modal-title pe-2'>{{@title}}</h5>
        {{#if @closeModal}}
          <button
            class='btn-close'
            data-bs-dismiss='modal'
            aria-label='Close'
            {{action @closeModal}}
            type='button'
          ></button>
        {{/if}}
      </div>

      <div class='modal-body'>{{yield}}</div>

      <div class='modal-footer'>
        {{#if @onSubmit}}
          <button
            type='button'
            class='btn btn-secondary {{if @submitDisabled "disabled"}}'
            {{action @onSubmit}}
            disabled={{@submitDisabled}}
          >
            {{@submitText}}
          </button>
        {{/if}}
        {{#if @closeModal}}
          <button type='button' class='btn btn-default' {{action @closeModal}}>
            Annuleren
          </button>
        {{/if}}
      </div>
    </div>
  </div>
</div>