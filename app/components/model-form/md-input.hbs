<div class='row form-group'>
  <label
    class='col-sm-2 col-form-label form-control-label'
    for={{inputIdentifier}}
  >
    {{label}}{{if required ' *'}}
  </label>
  <div class='col-sm-10'>
    <MdEditor
      @content={{mut (get model property)}}
      @textareaId={{inputIdentifier}}
    />

    {{form-control-feedback (get @model.errors property)}}
  </div>
</div>