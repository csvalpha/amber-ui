<fieldset class="form-group {{if this.usesGrid 'form-row'}}">
  <legend class={{if (not-eq @inputLayout 'vertical') 'col-form-legend col-sm-2'}}>
    {{@label}}{{if @required ' *'}}
  </legend>
  <div class={{if (not-eq @inputLayout 'vertical') 'col-sm-10'}}>
    {{#each @options as |opt|}}
      <div class='form-check'>
        <label class='form-check-label' for='{{this.inputIdentifier}}-{{opt.value}}'>
          <ModelForm::CheckboxButton
            @class={{concat 'form-check-input ' this.inputValidityClass}}
            @name={{this.inputIdentifier}}
            @id={{concat this.inputIdentifier '-' opt.value}}
            @value={{opt.value}}
            @groupValue={{mut (get @model @property)}}
            @required={{@required}}
            @disabled={{@disabled}}
          />
          <div class='custom-checkmark'></div>
          {{opt.label}}
        </label>
      </div>
    {{/each}}

