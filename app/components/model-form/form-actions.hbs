<div
  class={{if
    (not-eq inputLayout 'vertical')
    'form-actions mb-3 row justify-content-end'
    'form-actions mb-3'
  }}
>
  <div class={{if (not-eq inputLayout 'vertical') formActionWrapperClass}}>
    {{#if (or errors errorMessage)}}
      <div class='alert alert-danger form-submit-error'>
        Er zijn nog fouten in de invoer
        <ul>
          {{#each errors as |error|}}<li>{{error.message}}</li>{{/each}}
        </ul>
        {{this.errorMessage}}
      </div>
    {{/if}}
    <input
      type='submit'
      class='btn btn-primary'
      aria-label='Opslaan'
      value={{if submitButtonLabel submitButtonLabel 'Opslaan'}}
    />

    {{yield}}
  </div>
</div>